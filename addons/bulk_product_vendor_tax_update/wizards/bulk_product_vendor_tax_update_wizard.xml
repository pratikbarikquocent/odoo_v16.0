<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_update_mass_product_category_wizard" model="ir.ui.view">
        <field name="name">view_bulk_vendor_tax_update_wizard</field>
        <field name="model">product.vendor.tax.update.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="tax_operation" widget="radio" options="{'horizontal': false}"/>
                        <field name="supplier_taxes_id" widget="many2many_tags" />
                    </group>
                    <footer>
                        <button string="APPLY" type="object" name="apply" class="btn-primary"/>
                        <button string="DISCARD" type="object" name="cancel" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_vendor_template_tree_inherited_custom" model="ir.ui.view">
        <field name="name">vendor.template.tree.inherited.custom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='product_tag_ids']" position="after">
                <field name="supplier_taxes_id" widget="many2many_tags" optional="show"/>
            </xpath>
        </field>
     </record>

    <!-- Action Window to Open the Wizard -->
    <record id="action_update_vendor_tax_wizard" model="ir.actions.act_window">
        <field name="name">Update Vendor Tax</field>
        <field name="res_model">product.vendor.tax.update.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="groups_id" eval="[(6, 0, [ref('bulk_product_vendor_tax_update.bulk_product_vendor_tax_update_groups')])]"/>
        <field name="binding_model_id" ref="product.model_product_template" />
        <field name="binding_view_types">list</field>
    </record>
</odoo>
