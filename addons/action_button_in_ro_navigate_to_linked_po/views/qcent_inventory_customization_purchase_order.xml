<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_custom_purchase_order_inventory_form" model="ir.ui.view">
        <field name="name">view.custom.purchase_order.inventory.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//button[@name='action_picking_move_tree']" position="after">
                <field name="purchase_id" invisible="1"/>
                <button name="action_inventory_purchase_order"
                        type="object"
                        icon="fa-file-text-o"
                        class="btn-primary"
                        attrs="{'invisible': [('purchase_id', '=', False)]}">
                    <field string="Purchase" name="purchase_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>

