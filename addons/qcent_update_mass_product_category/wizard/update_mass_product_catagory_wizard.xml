<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_update_mass_product_category_wizard" model="ir.ui.view">
        <field name="name">view_update_mass_product_category_wizard</field>
        <field name="model">update.mass.product.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="product_category_id"/>
                    </group>
                    <footer>
                        <button string="APPLY" type="object" name="apply" class="btn-primary"/>
                        <button string="DISCARD" type="object" name="cancel" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>

        </field>
    </record>

    <record id="action_update_mass_product_category_wizard" model="ir.actions.act_window">
        <field name="name">Update Product Catagory</field>
        <!-- <field name="type">ir.actions.act_window</field> -->
        <field name="res_model">update.mass.product.category</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="groups_id" eval="[(4, ref('qcent_update_mass_product_category.update_mass_pproduct_catagory_groups'))]"/>
        <field name="binding_model_id" ref="product.model_product_template" />
        <field name="binding_view_types">list</field>
    </record>

</odoo>

